<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand">Simple Starting Sample</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- DROPDOWN MENU -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            List of People
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Content("~/HTML/Tristan.html")">Tristan Bosman</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/HTML/Tayla.html")">Tayla Walther</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/HTML/Tia.html")">Tia Naidoo</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/HTML/Ashton.html")">Ashton Theron</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/HTML/Gundo.html")">Gundo Ndou</a></li>
                        </ul>
                    </li>

                    <!-- LINK TO LISTSTUDENTS -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListStudents", "People")">List Students</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
